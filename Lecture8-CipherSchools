//1. Take 5 inputs in an array and print the elements in the array:- 

#include<iostream>
using namespace std;
int main()
{
    int a[4];
    int i;

    cout<<"Give 5 integers as input"<<endl;
    for(i=0;i<5;i++)
    {
        cin>>a[i];
    }
    cout<<"The 5 given inputs are : "<<endl;
    for(i=0;i<5;i++)
    {
        cout<<a[i]<<" ";
    }
    return 0;
}

//2. Enter 10 numbers in an array and reverse the array

#include<iostream>
using namespace std;
int main()
{
    int a[10];
    int i;

    cout<<"Give 10 integers as input"<<endl;
    for(i=0;i<10;i++)
    {
        cin>>a[i];
    }
    cout<<"The 10 given inputs are in reverse : "<<endl;
    for(i=9;i>=0;i--)
    {
        cout<<a[i]<<" ";
    }
    return 0;
}
